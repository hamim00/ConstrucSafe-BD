# Copy to .env and fill values

# --- Required ---
OPENAI_API_KEY=your_key_here

# --- Model selection ---
# Default mode used by /api/v1/analyze
OPENAI_MODEL_FAST=gpt-4o-mini

# Used by /api/v1/analyze?mode=accurate and /api/v1/analyze/accurate
OPENAI_MODEL_ACCURATE=gpt-4o

# --- Optional settings ---
MAX_IMAGE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,jfif

# CORS: use * or comma-separated list
CORS_ALLOW_ORIGINS=*

# Abuse control
RATE_LIMIT_PER_IP=10
DAILY_QUOTA_PER_IP=50

# Cache
CACHE_TTL_SECONDS=3600

# Optional Redis
# REDIS_URL=redis://localhost:6379/0

# Data paths (optional)
LAWS_JSON_PATH=backend/data/laws.json
APP_NAME=ConstructSafe-BD
APP_VERSION=1.0.0
