# Copy to .env and fill values

# ----------------------------
# Required
# ----------------------------
OPENAI_API_KEY=your_key_here

# ----------------------------
# Model selection (keep BOTH naming styles for compatibility)
# ----------------------------

# Your previous naming (FAST/ACCURATE)
OPENAI_MODEL_FAST=gpt-4o-mini
OPENAI_MODEL_ACCURATE=gpt-4o

# Newer common naming (some code uses these)
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_TEXT_MODEL=gpt-4o-mini

# If your code uses a single model variable
OPENAI_MODEL=gpt-4o-mini

# ----------------------------
# Image constraints
# ----------------------------
MAX_IMAGE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# ----------------------------
# CORS
# ----------------------------
# Use * or comma-separated list
CORS_ALLOW_ORIGINS=*
# Optional alternate name (some code uses this)
CORS_ORIGINS=*

# ----------------------------
# Abuse control / limits (keep both names)
# ----------------------------
RATE_LIMIT_PER_IP=10
DAILY_QUOTA_PER_IP=50

# Alternate names some repos use
RATE_LIMIT_PER_MINUTE=60
DAILY_TOKEN_LIMIT=200000

# ----------------------------
# Cache
# ----------------------------
CACHE_TTL_SECONDS=3600

# Optional Redis
# REDIS_URL=redis://localhost:6379/0

# ----------------------------
# Data paths (optional but useful)
# ----------------------------
LAWS_JSON_PATH=backend/data/laws.json
